<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/company_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/company_profile_logo_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/company_logotype_image"
            app:srcCompat="@drawable/ic_person" />

        <TextView
            android:id="@+id/company_profile_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toStartOf="@+id/company_profile_star_rating_rb"
            android:layout_toEndOf="@+id/company_profile_logo_iv"
            android:text="@string/company_semicolon" />

        <TextView
            android:id="@+id/card_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/company_profile_name_tv"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/company_profile_logo_iv"
            android:text="Address: " />

        <CheckBox
            android:id="@+id/card_clean_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/company_profile_logo_iv"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/company_profile_move_cb"
            android:clickable="false"
            android:text="@string/clean" />

        <CheckBox
            android:id="@+id/company_profile_move_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/company_profile_logo_iv"
            android:layout_alignParentStart="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:clickable="false"
            android:text="@string/move" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/company_profile_add_review_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/company_profile_star_rating_rb"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true"
            app:elevation="4dp"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_review" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/card_phone_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/company_profile_star_rating_rb"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/company_profile_add_review_fab"
            android:clickable="true"
            android:focusable="true"
            app:elevation="4dp"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_phone" />

        <RatingBar
            android:id="@+id/company_profile_star_rating_rb"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:numStars="5"
            android:stepSize="0.5" />

    </RelativeLayout>

</android.support.v7.widget.CardView>